# $ Id: $
# Ubuntu/Debian

account		required	pam_access.so
account		required	pam_krb5.so minimum_uid=1000
account		[default=bad success=ok user_unknown=ignore system_err=ignore service_err=ignore]	pam_ldap.so
account		required	pam_unix.so