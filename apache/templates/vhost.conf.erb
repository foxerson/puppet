<VirtualHost <%= ip %>:<%= port %>>
	ServerName <%= name %>
<% if serveraliases.is_a? Array -%>
<%= "	ServerAlias " -%>
<% serveraliases.each do |s| -%><%= "#{s} " %><% end -%><%= "\n"%>
<% elsif serveraliases != '' -%>
<%= "	ServerAlias #{serveraliases}\n" -%>
<% end -%>
	DocumentRoot <%= docroot %>
	<Directory <%= docroot %>>
		Options Indexes FollowingSymLinks MultViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>
	
<% if ssl %> 
<%= "	SSLCertificateKeyFile /afs/ir/group/lbre-tsg/ssl-certs/#{@hostname}/#{name}.key\n" -%>
<%= "	SSLCertificateFile /afs/ir/group/lbre-tsg/ssl-certs/#{@hostname}/#{name}.cer\n" -%>
<%= "	SSLCertificateChainFile /afs/ir/group/lbre-tsg/ssl-certs/#{@hostname}/#{name}.cer\n" -%> 	
<% end -%>

	ErrorLog <%= logdir %>/<%= name %>-error.log
	CustomLog <%= logdir %>/<%= name %>-access.log
</VirtualHost>