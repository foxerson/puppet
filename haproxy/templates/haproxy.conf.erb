listen <%= name %>:<%= port %>
	mode http
	balance roundrobin
	<% if cookie -%>
	cookie <%= name[0,5].upcase %> prefix 
	<% end -%>
	option httpclose
	option forwardfor
	<% if check -%>
	option httpchk HEAD /index.html HTTP/1.0
	<% end -%>
	
	<% bnum = 0 %>
	<% if backends.is_a? Array -%>
		<% backends.each do |b| -%>
	    <% bnum += 1 %>
	server <%= name[0,4] + bnum %> <%= b %> <%= "cookie #{name[0,2]+bnum}" if cookie %> <%= "check" if check %>  
	    <% end %> 
	<% end %>